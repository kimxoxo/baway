<%= simple_form_for(@user, html: { class: "form-horizontal" }) do |f| %>



  <%= f.input :name %>

  <%= f.input :surname %>

  <%= f.input :email %>

  <%= f.input :password %>

  <%= f.input :password_confirmation %>

  
  <%= button_tag(type: 'submit',
                class: 'btn btn-primary',
                style: 'margin-top: 10px;
                        margin-left: 175px;
                        width: 220px;
                        font-weight: bold; ') do %>
        cadastrar
        <i id="icon-loading"></i>
  <% end %>
<% end %>