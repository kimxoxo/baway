


//customer search using tax_number (cpf/cnpj)
<% if params[:tax_number] %>


	$('#icon-loading-customer-search').removeClass();

	//if customer was found
	<% if @customer %>

		$('#icon-loading-customer-search').addClass("icon-ok success_text");
		$('#budget_customer_attributes_name').val('<%= @customer.name %>');
		$('#budget_customer_attributes_street').val('<%= @customer.street %>');
		$('#budget_customer_attributes_street_number').val('<%= @customer.street_number %>');
		$('#budget_customer_attributes_neighbourhood').val('<%= @customer.neighbourhood %>');
		$('#budget_customer_attributes_city').val('<%= @customer.city %>');
		$('#budget_customer_attributes_postal_code').val('<%= @customer.postal_code %>');
		$('#budget_customer_attributes_email').val('<%= @customer.email %>');
		$('#budget_customer_attributes_landline').val('<%= @customer.landline %>');
		$('#budget_customer_attributes_mobile').val('<%= @customer.mobile %>');

	<% else %>
	
		$('#icon-loading-customer-search').removeClass();
		$('#budget_customer_attributes_name').val('');
		$('#budget_customer_attributes_street').val('');
		$('#budget_customer_attributes_street_number').val('');
		$('#budget_customer_attributes_neighbourhood').val('');
		$('#budget_customer_attributes_city').val('');
		$('#budget_customer_attributes_postal_code').val('');
		$('#budget_customer_attributes_email').val('');
		$('#budget_customer_attributes_landline').val('');
		$('#budget_customer_attributes_mobile').val('');
	<% end %>



<% end %>

