

<% if params[:budgets_product][:quantity] %>
	
	<% price = compute_price(@product.supplier_price, @product.ipi, @budgetsproduct.markup, @budgetsproduct.quantity) %>


	$('#product_id_<%= @budgetsproduct.product_id %>').find('.td_quantity').html('<%= @budgetsproduct.quantity %>');
	$('#product_id_<%= @budgetsproduct.product_id %>').find('.td_price').find('span').html('<%= number_to_currency(price) %>');
	$('#product_id_<%= @budgetsproduct.product_id %>').find('.td_price').find('i').addClass('icon-ok success_text');

	hide_all_forms();
	show_spans();

<% end %>




