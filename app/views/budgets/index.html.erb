
<h1>Listing budgets</h1>

<table>
  <tr>
    <th>Customer</th>
    <th>Status</th>
    <th>Seller</th>
    <th>Arquitect</th>
    <th>Payment condition</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @budgets.each do |budget| %>
  <tr>
    <td><%= budget.customer_id %></td>
    <td><%= budget.status %></td>
    <td><%= budget.seller_id %></td>
    <td><%= budget.arquitect_id %></td>
    <td><%= budget.payment_condition_id %></td>
    <td><%= budget.description %></td>
    <td><%= link_to 'Show', budget %></td>
    <td><%= link_to 'Edit', edit_budget_path(budget) %></td>
    <td><%= link_to 'Destroy', budget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

