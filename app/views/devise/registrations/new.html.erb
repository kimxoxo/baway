



<div class="container" style="margin-top: 50px; border: 0px solid red; ">
  <div class="span7 well" style="margin-left: 180px; border: 0px solid green; ">

        <legend style="border: 0; text-transform: capitalize; color: #666; ">
          <i class="icon-coffee" style="padding-right: 5px; font-size: 18px; "></i>
          Cadastro
        </legend>
        

    <%= simple_form_for(@user, html: { class: "form-horizontal" }) do |f| %>

      <%= f.input :role,
                  prompt: 'selecione',
                  collection: { interno: 1, arquiteto: 2} %>


      <%= f.input :name %>

      <%= f.input :surname %>

      <%= f.input :email %>

      <%= f.input :password %>

      <%= f.input :password_confirmation %>

      
      <%= button_tag(type: 'submit',
                    class: 'btn btn-primary',
                    style: 'margin-top: 10px;
                            margin-left: 175px;
                            width: 220px;
                            font-weight: bold; ') do %>
            cadastrar
            <i id="icon-loading"></i>
      <% end %>
    <% end %>
  </div>
</div>
