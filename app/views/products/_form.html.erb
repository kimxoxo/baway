<%= simple_form_for(@product, html: { class: "form-horizontal" }) do |f| %>
 

  <%= f.input :supplier_id,
              as: :select,
              collection: Supplier.all,
              prompt: 'selecione',
              label_html: {style: ''} %>



  <%= f.input :code %>

  <%= f.input :brand %>

  <%= f.input :description,
              input_html: { rows: 3 } %>

  <%= f.input :supplier_price,
              as: :string %>

  <%= f.input :ipi,
              as: :string %>

  <%= f.input :ncm %>

  <%= f.input :width,
              as: :string %>

  <%= f.input :um %>

  <%= button_tag(type: 'submit',
                class: 'btn btn-primary',
                style: 'margin-top: 10px;
                        margin-left: 175px;
                        width: 220px;
                        font-weight: bold; ') do %>
        cadastrar
        <i id="icon-loading"></i>
  <% end %>
<% end %>